{
	"name": "@agentation-mobile/bridge-android",
	"version": "0.1.0",
	"description": "Android platform bridge for agentation-mobile (ADB + UIAutomator)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andresdefi/agentation-mobile.git",
		"directory": "packages/bridges/bridge-android"
	},
	"keywords": ["agentation", "mobile", "annotation", "mcp", "ai"],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@agentation-mobile/core": "workspace:*",
		"@agentation-mobile/bridge-core": "workspace:*",
		"fast-xml-parser": "^4.5.1"
	},
	"devDependencies": {
		"@types/node": "^22.10.5",
		"tsup": "^8.3.5"
	}
}
