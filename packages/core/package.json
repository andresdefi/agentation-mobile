{
	"name": "@agentation-mobile/core",
	"version": "0.1.0",
	"description": "Core schemas, types, and store for agentation-mobile",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andresdefi/agentation-mobile.git",
		"directory": "packages/core"
	},
	"keywords": ["agentation", "mobile", "annotation", "mcp", "ai"],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"build:schema": "tsx src/generate-schemas.ts",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"test": "vitest run --passWithNoTests"
	},
	"dependencies": {
		"better-sqlite3": "^11.7.0",
		"zod": "^3.24.1",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^22.10.5",
		"tsup": "^8.3.5",
		"tsx": "^4.21.0",
		"vitest": "^2.1.8"
	}
}
