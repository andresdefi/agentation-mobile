{
	"name": "@agentation-mobile/mcp",
	"version": "0.1.0",
	"description": "MCP server for agentation-mobile with stdio and HTTP transport",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/andresdefi/agentation-mobile.git",
		"directory": "packages/mcp"
	},
	"keywords": ["agentation", "mobile", "annotation", "mcp", "ai-agent", "model-context-protocol"],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"agentation-mobile-mcp": "./dist/stdio.js"
	},
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"test": "vitest run --passWithNoTests"
	},
	"dependencies": {
		"@agentation-mobile/core": "workspace:*",
		"@agentation-mobile/bridge-core": "workspace:*",
		"@agentation-mobile/server": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.4.0",
		"express": "^4.21.1",
		"zod": "^3.24.1"
	},
	"optionalDependencies": {
		"@agentation-mobile/bridge-android": "workspace:*",
		"@agentation-mobile/bridge-react-native": "workspace:*"
	},
	"devDependencies": {
		"@types/express": "^5.0.0",
		"@types/node": "^22.10.5",
		"tsup": "^8.3.5",
		"vitest": "^2.1.8"
	}
}
