{
	"name": "agentation-mobile",
	"version": "0.1.0",
	"private": true,
	"description": "Mobile UI annotation tool for AI coding agents",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andresdefi/agentation-mobile.git"
	},
	"packageManager": "pnpm@9.15.4",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"test": "turbo test",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"clean": "turbo clean",
		"publish:all": "turbo build && pnpm -r --filter '!@agentation-mobile/web-ui' --filter '!@agentation-mobile/flutter-sdk' publish --no-git-checks"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.3.3",
		"typescript": "^5.7.3"
	}
}
