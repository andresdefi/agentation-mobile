{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "warn",
				"useKeyWithClickEvents": "warn",
				"noAutofocus": "off"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noAssignInExpressions": "warn"
			},
			"correctness": {
				"noUnnecessaryContinue": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			".turbo",
			"sdks/swift/.build",
			"sdks/kotlin/.gradle",
			"sdks/kotlin/build"
		]
	}
}
