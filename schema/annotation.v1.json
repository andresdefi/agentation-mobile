            "y": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "width": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "height": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          },
          "required": [
            "x",
            "y",
            "width",
            "height"
          ],
          "additionalProperties": false
        },
        "selectedText": {
          "type": "string"
