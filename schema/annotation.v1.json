        "id": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        },
        "x": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "y": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "deviceId": {
          "type": "string"
        },
        "platform": {
          "type": "string"
        },
        "screenWidth": {
          "type": "number"
        },
        "screenHeight": {
          "type": "number"
        },
        "screenId": {
          "type": [
            "string",
            "null"
          ]
        },
        "screenshotId": {
          "type": "string"
