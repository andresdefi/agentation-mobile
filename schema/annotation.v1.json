                "react-native",
                "flutter",
                "ios-native",
                "android-native"
              ]
            },
            "componentPath": {
              "type": "string"
            },
            "componentName": {
              "type": "string"
            },
            "componentFile": {
              "type": "string"
            },
            "sourceLocation": {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string"
                },
                "line": {
                  "type": "number"
                },
                "column": {
                  "type": "number"
                }
              },
              "required": [
                "file",
                "line"
