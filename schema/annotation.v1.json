      "required": [
        "id",
        "sessionId",
        "x",
        "y",
        "deviceId",
        "platform",
        "screenWidth",
        "screenHeight",
        "comment",
        "intent",
        "severity",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
